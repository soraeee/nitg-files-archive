		GAMESTATE:ForceSmoothLines(1);
	
		for pn=1,4 do
			local pr = math.mod(pn,2)+1
			
			local a = Plr(pn)
			
			if a then
			
				a:SetFarDist(10000)
				a:SetInputPlayer(math.mod(pn-1,2))
				
				a:GetChild('NoteField'):zoom(1)
				a:GetChild('NoteField'):zoomz(1)
				
				a:fov( fov(45) )
				
				if pn > 2 then
					local b = GetJud(pn)
					b:hidden(1)
					local b = GetCom(pn)
					b:hidden(1)
				else
					a:hidden(0)
				end
				if pn < 3 then
					a:SetAwake(true)
				end
				a:x(sw/2 - 160*(pr*2-3))
				a:y(sh/2)
				
				if pn > 0 then
					a:hidden(1)
				end
				
			end
			
		end
		
		for pn=1,2 do
			local d = 0.25; if pn == 2 then d = 0.75 end
			
			local b = GetJud(pn)
			if b then
				b:hidden(1);
				b:basezoomx(1);
				b:basezoomy(1);
				b:sleep(9E9)
				b:bob()
				b:effectperiod(1000000)
				b:effectoffset(250000)
			end
			local c = GetCom(pn)
			if c then
				c:hidden(1);
				c:basezoomx(1);
				c:basezoomy(1);
				c:sleep(9E9)
				c:bob()
				c:effectperiod(1000000)
				c:effectoffset(250000)
			end
			
			local b = _G['jud'..pn..'p']
			if b then
				b:hidden(0);
				--b:basezoomx(.8);
				--b:basezoomy(.8);
				b:x(SCREEN_WIDTH*d)
				b:y(SCREEN_HEIGHT*0.5)
				--Trace(tostring(b));
			end
			local c = _G['com'..pn..'p']
			if c then
				c:hidden(0);
				--c:basezoomx(.8);
				--c:basezoomy(.8);
				c:x(SCREEN_WIDTH*d)
				c:y(SCREEN_HEIGHT*0.5)
			end
			
		end
		
		MESSAGEMAN:Broadcast('GetProxy');
		MESSAGEMAN:Broadcast('AFTOn');
		
	end, persist = true}
